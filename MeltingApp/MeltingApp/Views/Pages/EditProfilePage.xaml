<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.EditProfilePage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="NameLabelTitle" Text="Name"></Label>
            <Entry x:Name="NameEntry" Text="{Binding User.full_name}"></Entry>
            <Label x:Name="UserIDEntry" Text="{Binding User.user_id}"></Label>
            <!--<Button x:Name="AvatarButton" Command="{Binding SetAvatarProfileCommand}"></Button>-->
            <Button x:Name="SaveButton" Text="Save" Command="{Binding SaveEditProfileCommand}"></Button>
            <Label Text="{Binding ResponseMessage}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>