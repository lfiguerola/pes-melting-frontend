<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.HelpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Prueba}"/>
            <ListView  x:Name="ListViewHelp" ItemsSource="{Binding ListElements}"  SelectedItem="{Binding HelpElement}" >
                <ListViewHelp.ItemTemplate>
                    <DataTemplate>
                        <TextCell  Text="{Binding Nombre}" Detail="{Binding Descripcion}" />
                    </DataTemplate>
                </ListViewHelp.ItemTemplate>
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>