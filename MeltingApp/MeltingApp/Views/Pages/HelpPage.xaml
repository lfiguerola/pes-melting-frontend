                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell  Text="{Binding Nombre}" Detail="{Binding Descripcion}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView> -->
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>