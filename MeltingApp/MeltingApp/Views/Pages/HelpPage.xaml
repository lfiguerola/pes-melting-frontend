<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.HelpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ayuda y sugerencias" />
            <Label Text="Popaulars"/>
            <ListView x:Name="ListHelp">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell  Text="{Binding Nombre}" Detail="{Binding Descripcion}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>