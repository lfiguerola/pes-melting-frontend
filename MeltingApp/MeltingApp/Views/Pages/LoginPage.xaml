<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to login!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label x:Name="EmailLabel" Text="Email"></Label>
            <Entry x:Name="EmailEntry" Text="{Binding User.email}"></Entry>
            <Label x:Name="PasswordLabel" Text="Password"></Label>
            <Entry x:Name="PasswordEntry" Text="{Binding User.password}"></Entry>

            <Button Text="Login" Command="{Binding LoginUserCommand}"></Button>
            <Button Text="Register" Command="{Binding RegisterButtonCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>