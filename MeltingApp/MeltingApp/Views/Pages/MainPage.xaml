<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Main Page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Create Event" Command="{Binding NavigateToCreateEventPageCommand}"></Button>
            <Button x:Name="ViewButton" Text="ViewProfile" Command="{Binding ViewProfileCommand}"></Button>
            <Button x:Name="EditButton" Text="EditProfile" Command="{Binding SaveEditProfileCommand}"></Button>
            <Button x:Name="AvatarButton" Text="AvatarProfile" Command="{Binding SetAvatarProfileCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>