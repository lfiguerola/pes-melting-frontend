<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.MainPage"
             Title="Melting App"
             BackgroundColor="#FF1C1C36">
    <ContentPage.Content>
        <ScrollView>

            <Frame  Margin="20,20">
            <Grid  >

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" x:Name="logoImage" Source="logoLogin.png" VerticalOptions="CenterAndExpand"/>
                <Label Grid.Row="1"  x:Name="Welcome" Text="Hello! Welcome to MeltingApp"  Style="{StaticResource ProfileNameLabel}" HorizontalOptions="CenterAndExpand"></Label>
                <Label Grid.Row="2"  x:Name="Info" Text="Here you can find some information about your faculty, find other universities, faculties and users. Also you can assist and create events and chat with the others. Have fun and remember, integrate with karma!" 
                      HorizontalOptions="CenterAndExpand" Style="{StaticResource StatsNumberLabel}"></Label>
 
            </Grid>
            </Frame>


        </ScrollView>
    </ContentPage.Content>
</ContentPage>