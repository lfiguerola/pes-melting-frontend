<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Register"
                HorizontalOptions="CenterAndExpand" />

            <Label x:Name="EmailLabel" Text="Email:"></Label>
            <Entry x:Name="EmailEntry" Text="{Binding Email}"></Entry>
            <Label x:Name="PasswordLabel" Text="Password:"></Label>
            <Entry x:Name="PasswordEntry" Text="{Binding Password}"></Entry>
            <Label x:Name="UsernameLabel" Text="Username:"></Label>
            <Entry x:Name="UsernameEntry" Text="{Binding Username}"></Entry>

            <Button Text="Register" Command="{Binding RegisterUserCommand}"></Button>
            
            <Label Text="{Binding ResponseMessage}"></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>