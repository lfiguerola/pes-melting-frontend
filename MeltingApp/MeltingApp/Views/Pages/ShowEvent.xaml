<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeltingApp.Views.Pages.ShowEvent">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="EventName" Text="{Binding Event.name}"></Label>
            <Label x:Name="EventDescription" Text="{Binding Event.description}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>