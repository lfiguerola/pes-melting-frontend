<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fields="clr-namespace:MeltingApp.Behaviors;assembly=MeltingApp"
             x:Class="MeltingApp.Views.Pages.StaticInfoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="University information"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text="University Name:"></Label>
            <Label x:Name="UniNameLabel" Text="{Binding StaticInfo.universityName}" FontSize="Large"></Label>

            <Label x:Name="UniLatitudeLabel" Text="{Binding StaticInfo.latitude}"></Label>

            <Label x:Name="UniLongitudeLabel" Text="{Binding StaticInfo.longitude}"></Label>

            <Label x:Name="UniAdressLabel" Text="{Binding StaticInfo.adress}"></Label>
            
            <Label x:Name="UniPhoneLabel" Text="{Binding StaticInfo.phone}"></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>